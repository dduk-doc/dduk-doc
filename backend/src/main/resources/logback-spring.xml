<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 공통 변수 정의 -->
    <property name="LOG_PATH" value="/logs" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight([%thread]) %highlight(%-5level) %logger{36} - %msg%n" />

    <!-- 콘솔 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- LOCAL 환경: 콘솔만 사용 -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>

    <!-- DEV 환경 로그 설정 -->
    <springProfile name="dev">
        <!-- 일별 로그 파일 설정 (INFO 레벨) -->
        <appender name="FILE-INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/dev/info/ddukdoc-info.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>INFO</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/dev/info/ddukdoc-info.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory> <!-- 30일 보관 -->
            </rollingPolicy>
        </appender>

        <!-- 일별 로그 파일 설정 (ERROR 레벨) -->
        <appender name="FILE-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/dev/error/ddukdoc-error.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/dev/error/ddukdoc-error.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>60</maxHistory> <!-- 60일 보관 -->
            </rollingPolicy>
        </appender>

        <!-- 로그 레벨 설정 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE-INFO" />
            <appender-ref ref="FILE-ERROR" />
        </root>
    </springProfile>

    <!-- PROD 환경 로그 설정 -->
    <springProfile name="prod">
        <!-- 일별 로그 파일 설정 (INFO 레벨) -->
        <appender name="FILE-INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/prod/info/ddukdoc-info.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>INFO</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/prod/info/ddukdoc-info.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory> <!-- 30일 보관 -->
            </rollingPolicy>
        </appender>

        <!-- 일별 로그 파일 설정 (ERROR 레벨) -->
        <appender name="FILE-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/prod/error/ddukdoc-error.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/prod/error/ddukdoc-error.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>60</maxHistory> <!-- 60일 보관 -->
            </rollingPolicy>
        </appender>

        <!-- 로그 레벨 설정 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE-INFO" />
            <appender-ref ref="FILE-ERROR" />
        </root>
    </springProfile>
</configuration>